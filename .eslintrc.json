{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      }
    }
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "import/extensions": ["error", "ignorePackages", { "js": "always" }],
    "import/prefer-default-export": "off"
  },
  "overrides": [
    {
      "files": ["backend/**/*.js"],
      "env": { "node": true },
      "rules": {
        "import/no-extraneous-dependencies": "off",
        "no-console": "off",
        "camelcase": "off"
      }
    }
  ]
}
